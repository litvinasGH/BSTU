<Window x:Class="lab4.singup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4"
        mc:Ignorable="d"
        Title="singup" Height="450" Width="800" MinWidth="555" MinHeight="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel VerticalAlignment="Top" Margin="0 10 10 0" Grid.Row="0" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Top">
                <Button x:Name="btnEnglish" 
                        Content="EN" 
                        Width="40" 
                        Margin="5 0"
                        Tag="en-US" Click="btnEnglish_Click"/>

                <Button x:Name="btnRussian" 
                        Content="RU" 
                        Width="40" 
                        Margin="5 0"
                        Tag="ru-RU" Click="btnRussian_Click"/>
            </StackPanel>
        </DockPanel>
        <TabControl Grid.Row="1">
            <!-- Вкладка входа -->
            <TabItem Header="Вход">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="{DynamicResource NameLogIN}" 
                               FontSize="20" 
                               Margin="0 0 0 20"
                               HorizontalAlignment="Center"/>
                    <Label Grid.Row="1" 
                    Margin="150 0 150 10"
                    Padding="5"
                        >
                        Username</Label>
                    <TextBox x:Name="loginUsername" 
                             Grid.Row="2" 
                             Margin="150 0 150 10"
                             Padding="5"
                             />
                    <Label Grid.Row="3" 
                    Margin="150 0 150 10"
                    Padding="5"
                    >
                        Password</Label>
                    <PasswordBox x:Name="loginPassword" 
                                 Grid.Row="4" 
                                 Margin="150 0 150 10"
                                 Padding="5"
                                 />

                    <Button x:Name="btnLogin" 
                            Grid.Row="5" 
                            Content="Войти"
                            Margin="150 0 150 10"
                            Padding="10 5"
                            HorizontalAlignment="Stretch"/>
                </Grid>
            </TabItem>

            <!-- Вкладка регистрации -->
            <TabItem Header="Регистрация" HorizontalAlignment="Right" Margin="0,-2,-2,0" Width="84">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Создание аккаунта" 
                               FontSize="20" 
                               Margin="0 0 0 20"
                               HorizontalAlignment="Center"/>
                    <Label Grid.Row="1" 
                    Margin="150,0,150,10"
                    Padding="5">
                        Username</Label>
                    <TextBox x:Name="regUsername" 
                             Grid.Row="2" 
                             Margin="150 0 150 10"
                             Padding="5"
                             
                             />
                    <Label Grid.Row="3" 
                    Margin="150 0 150 10"
                    Padding="5"
    >
                        Password</Label>
                    <PasswordBox x:Name="regPassword" 
                                 Grid.Row="4" 
                                 Margin="150 0 150 10"
                                 Padding="5"
                                 />
                    <Label Grid.Row="5" 
                    Margin="150 0 150 10"
                    Padding="5"
                    >
                        Confirm Password</Label>
                    <PasswordBox x:Name="regConfirmPassword" 
                                 Grid.Row="6" 
                                 Margin="150 0 150 20"
                                 Padding="5"
                                 />

                    <Button x:Name="btnRegister" 
                            Grid.Row="7" 
                            Content="Зарегистрироваться" 
                            Padding="10 5"
                            Margin="150 0"
                            HorizontalAlignment="Stretch"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
