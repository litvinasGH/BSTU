<Window x:Class="Printinvest.Views.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Password_Title}"
        Height="150" Width="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <StackPanel Margin="20">
        <PasswordBox x:Name="PwdBox"/>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="{DynamicResource Password_Ok}"
                    Width="60"
                    Margin="0,0,10,0"
                    Click="Ok_Click"/>
            <Button Content="{DynamicResource Password_Cancel}"
                    Width="60"
                    Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
