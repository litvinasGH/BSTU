<Window x:Class="Printinvest.Views.EquipmentDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:utils="clr-namespace:Printinvest.Utils"
        Title="{DynamicResource Details_Title}"
        Style="{StaticResource W}"
        Height="400" Width="600"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <utils:ImageCoverPathConverter x:Key="ImageCoverPathConverter"/>
        <Image x:Key="DefaultCover" Source="/Assets/default_cover.png"/>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок = бренд -->
        <TextBlock Text="{Binding Brand, Converter={StaticResource EnumToLocalizedStringConverter}}"
                   FontSize="20" FontWeight="Bold"/>

        <StackPanel Grid.Row="1" Margin="0,20,0,0">
            <Image Source="{Binding ImagePath, Converter={StaticResource ImageCoverPathConverter}}"
                   Height="150"
                   Stretch="Uniform"
                   Margin="0,0,0,10"/>
            <TextBlock Text="{Binding Model}"
                       FontSize="16"/>
            <TextBlock Text="{Binding Price, StringFormat={}{0} ₽}"
                       FontSize="16"
                       Margin="0,10,0,0"/>
            <TextBlock Text="{DynamicResource Details_SupportedServices}"
                       FontWeight="Bold"
                       Margin="0,20,0,0"/>
            <ItemsControl ItemsSource="{Binding SupportedServices}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource EnumToLocalizedStringConverter}}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</Window>
