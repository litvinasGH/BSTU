<UserControl x:Class="Printinvest.Views.Controls.FilterPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:enums="clr-namespace:Printinvest.Models.Enums">

    <Border Background="White" Margin="10" Padding="15" CornerRadius="8">
        <StackPanel>
            <!-- Поиск -->
            <TextBox Text="{Binding SearchQuery}"
                 Style="{StaticResource ModernTextBox}"
                 Tag="{DynamicResource SearchPlaceholder}"/>

            <!-- Фильтр по типу услуги -->
            <ComboBox ItemsSource="{Binding ServiceTypes}"
                  SelectedItem="{Binding SelectedServiceType}"
                  Style="{StaticResource FilterComboBox}"
                  Margin="0 15 0 0"
                  ItemTemplate="{StaticResource ServiceTypeTemplate}"/>

            <!-- Фильтр по бренду -->
            <ComboBox ItemsSource="{Binding Brands}"
                  SelectedItem="{Binding SelectedBrand}"
                  Style="{StaticResource FilterComboBox}"
                  Margin="0 10 0 0"
                  ItemTemplate="{StaticResource BrandTemplate}"/>

            <!-- Фильтр по цене -->
            <StackPanel Margin="0 15 0 0">
                <TextBlock Text="{DynamicResource PriceRangeLabel}"
                       Foreground="{StaticResource TextPrimary}"/>
                <Slider Minimum="0" Maximum="100000" 
                    Value="{Binding MaxPrice}"
                    TickFrequency="5000"
                    Style="{StaticResource RangeSlider}"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>