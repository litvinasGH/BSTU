<Window x:Class="Printinvest.LoginPage.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Printinvest"
        xmlns:helpers="clr-namespace:Printinvest.other"
        Title="{DynamicResource RegistrationTitle}" Height="400" Width="500">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Поля регистрации -->
        <TextBox Grid.Row="0" 
                 Text="{Binding CurrentUser.FirstName}" 
                 Style="{StaticResource AuthTextBox}"
                 ToolTip="{DynamicResource FirstNameHint}"/>

        <TextBox Grid.Row="1" 
                 Text="{Binding CurrentUser.LastName}" 
                 Style="{StaticResource AuthTextBox}"
                 ToolTip="{DynamicResource LastNameHint}"/>

        <TextBox Grid.Row="2" 
                 Text="{Binding CurrentUser.Email}" 
                 Style="{StaticResource AuthTextBox}"
                 ToolTip="{DynamicResource EmailHint}"/>

        <PasswordBox Grid.Row="3" 
                     helpers:PasswordBoxAssistant.BoundPassword="{Binding CurrentUser.Password, Mode=TwoWay}"
                     Style="{StaticResource AuthPasswordBox}"
                     ToolTip="{DynamicResource PasswordHint}"/>

        <PasswordBox Grid.Row="4" 
                     helpers:PasswordBoxAssistant.BoundPassword="{Binding CurrentUser.Password, Mode=TwoWay}"
                     Style="{StaticResource AuthPasswordBox}"
                     ToolTip="{DynamicResource ConfirmPasswordHint}"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="{DynamicResource RegisterButton}" 
                    Command="{Binding RegisterCommand}" 
                    Style="{StaticResource PrimaryButton}"/>
            <Button Content="{DynamicResource CancelButton}" 
                    Command="{Binding CancelCommand}" 
                    Style="{StaticResource SecondaryButton}"/>
        </StackPanel>
    </Grid>
</Window>