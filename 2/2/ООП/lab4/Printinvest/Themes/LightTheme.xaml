<!-- LightTheme.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Фоновые и текстовые цвета для светлой темы -->
    <Color x:Key="BackgroundColor">#FFFFFFFF</Color>
    <Color x:Key="SurfaceColor">#FFF5F5F5</Color>
    <Color x:Key="TextPrimaryColor">#FF212121</Color>
    <Color x:Key="TextSecondaryColor">#FF757575</Color>

    <!-- Акценты (можно переопределить или оставить из AppStyles) -->
    <Color x:Key="AccentColor">#0F6985</Color>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="Foreground" Color="#FFFFFF"/>

</ResourceDictionary>
