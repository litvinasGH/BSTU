<!-- DarkTheme.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Фоновые и текстовые цвета для тёмной темы -->
    <Color x:Key="BackgroundColor">#FF1E1E1E</Color>
    <Color x:Key="SurfaceColor">#FF2D2D30</Color>
    <Color x:Key="TextPrimaryColor">#FFFFFFFF</Color>
    <Color x:Key="TextSecondaryColor">#FFB3B3B3</Color>

    <!-- Акценты (можно поменять под тёмную тему) -->
    <Color x:Key="AccentColor">#0F6985</Color>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="Foreground" Color="#000000"/>

</ResourceDictionary>
